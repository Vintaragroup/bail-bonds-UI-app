# MongoDB connection
MONGO_URI=mongodb+srv://USERNAME:PASSWORD@CLUSTER-NAME.mongodb.net/warrantdb?retryWrites=true&w=majority
MONGO_DB=warrantdb

# HTTP
PORT=8080

# CORS: allow your frontend origin (regex or literal)
# Example for local Vite dev server:
WEB_ORIGIN=http://localhost:5173

# Dashboard timezone (affects booking-day window calculations)
DASHBOARD_TZ=America/Chicago

# Firebase Authentication
FIREBASE_PROJECT_ID=
# Absolute path to the Firebase Admin SDK service account JSON (do not commit the file)
GOOGLE_APPLICATION_CREDENTIALS=
# Optional: point to emulator when developing locally (e.g., localhost:9099)
# FIREBASE_AUTH_EMULATOR_HOST=

# Session cookie secret used when exchanging Firebase ID tokens for backend cookies
SESSION_SECRET=

# Stripe (payments)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Enrichment providers
ENRICHMENT_PROVIDERS=pipl,whitepages
ENRICHMENT_CACHE_TTL_MINUTES=60
ENRICHMENT_ERROR_CACHE_TTL_MINUTES=15

# Whitepages (manual enrichment)
WHITEPAGES_API_KEY=
# Optional tuning
# WHITEPAGES_TIMEOUT_MS=8000
# WHITEPAGES_CACHE_TTL_MINUTES=60
# WHITEPAGES_ERROR_CACHE_TTL_MINUTES=15

# Pipl (manual enrichment)
PIPL_API_KEY=
# Optional tuning
# PIPL_TIMEOUT_MS=8000
# PIPL_CACHE_TTL_MINUTES=240
# PIPL_ERROR_CACHE_TTL_MINUTES=30

# SMTP (optional; enables emailing invite links)
# For local dev you can run MailHog (SMTP_HOST=localhost, SMTP_PORT=1025, SMTP_SECURE=false)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=no-reply@example.com

# App name for email subject/body
APP_NAME=Bail Bonds Dashboard
# Redis / queues
REDIS_URL=redis://localhost:6379/0
QUEUE_HEARTBEAT_MS=15000
MESSAGING_QUEUE_CONCURRENCY=5

# Twilio Programmable Messaging
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_MESSAGING_SERVICE_SID=
# Optional overrides
# TWILIO_STATUS_CALLBACK_URL=http://localhost:8080/api/messages/twilio/status
# TWILIO_WEBHOOK_AUTH_TOKEN=

